<style>
  .highlights {
    padding-block: 4rem;
    color: #292929;
    text-transform: capitalize;
    font-family: var(--font-body-family) !important;
  }
  .highlights__list {
    list-style: none;
    display: flex;
    justify-content: center;
    gap: 4rem;
  }
  .highlights__item {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 2rem;
  }
  .highlights__item div {
    display: flex;
    align-items: center;
    gap: 1rem;
  }
  .highlights h2 {
    font-family: var(--font-body-family) !important;
    font-weight: 900;
    color: #292929;
  }
  .highlights p,
  .highlights h2 {
    margin: 0 !important;
  }
</style>

<div class="highlights page-width-desktop">
  <ul class="highlights__list">
    <li class="highlights__item">
      <div>
        {{ 'done-outline.svg' | inline_asset_content }}
        <h2>30+</h2>
      </div>
      <p>projects completed</p>
    </li>
    <li class="highlights__item">
      <div>
        {{ 'earth.svg' | inline_asset_content }}
        <h2>36</h2>
      </div>
      <p>exporting to countries</p>
    </li>
    <li class="highlights__item">
      <div>
        {{ 'construction.svg' | inline_asset_content }}
        <h2>5</h2>
      </div>
      <p>years of expertise</p>
    </li>
    <li class="highlights__item">
      <div>
        {{ 'carbon_gem.svg' | inline_asset_content }}
        <h2>47</h2>
      </div>
      <p>unique stones</p>
    </li>
  </ul>
</div>
